# OpenAI-compatible configuration
OPENAI_API_KEY=sk-your-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Feed inputs/outputs
FEEDS_OPML=Feeds.opml
OUTPUT_RSS=summary.xml

# Feed selection knobs
MAX_FEEDS=10
MAX_ITEMS_PER_FEED=1

# Summary RSS metadata
SUMMARY_FEED_TITLE=AFO AI Feed Digest
SUMMARY_FEED_DESCRIPTION=Automatic summaries generated from Feeds.opml sources.
SUMMARY_FEED_LINK=https://github.com/tenki/afo

# Cache settings
FEED_CACHE_DIR=.cache/feeds
FEED_CACHE_TTL_MINUTES=60

# Delay Configuration
DELAY_BETWEEN_ITEMS_MS=0
DELAY_BETWEEN_FEEDS_MS=0
